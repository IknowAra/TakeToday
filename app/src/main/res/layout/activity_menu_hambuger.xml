<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:background="@drawable/back"
    android:layout_gravity="end"
    tools:context=".menu_hambuger">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        >

        <TextView
            android:id="@+id/user_name"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="이름"/>

        <TextView
            android:id="@+id/user_tele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginBottom="40dp"
            android:text="전화번호"/>

        <TextView
            android:id="@+id/cate"
            android:fontFamily="@font/wandohoper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:text="@string/menu_cate"/>

        <TextView
            android:id="@+id/finished"
            android:fontFamily="@font/wandohoper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:text="@string/menu_finished"/>

        <TextView
            android:id="@+id/setting"
            android:fontFamily="@font/wandohoper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:text="@string/menu_setting"/>

        <TextView
            android:id="@+id/ask"
            android:fontFamily="@font/wandohoper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:text="@string/menu_ask"/>

    </LinearLayout>

</LinearLayout>
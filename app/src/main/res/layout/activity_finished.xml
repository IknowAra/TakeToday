<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".FinishedActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/llayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left|top"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:backgroundTint="#ffffff"
                android:background="@drawable/icon_back"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <ScrollView
            android:id="@+id/ScrollView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nonfinished"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:text="완성된 갤러리가 없습니다"
                    android:textColor="@color/black"
                    android:fontFamily="@font/wellbeing"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:background="@drawable/main_button"
                        android:id="@+id/fbutton1"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:text="" />

                    <Button
                        android:background="@drawable/main_button"
                        android:id="@+id/fbutton2"
                        android:layout_width="0dp"
                        android:layout_margin="10dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:layout_margin="10dp"
                        android:background="@drawable/main_button"
                        android:id="@+id/fbutton3"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="" />

                    <Button
                        android:layout_margin="10dp"
                        android:background="@drawable/main_button"
                        android:id="@+id/fbutton4"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:layout_margin="10dp"
                        android:background="@drawable/main_button"
                        android:id="@+id/fbutton5"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="" />

                    <Button
                        android:layout_margin="10dp"
                        android:background="@drawable/main_button"
                        android:id="@+id/fbutton6"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:layout_margin="10dp"
                        android:background="@drawable/main_button"
                        android:id="@+id/fbutton7"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:text="" />

                    <Button
                        android:layout_margin="10dp"
                        android:background="@drawable/main_button"
                        android:id="@+id/fbutton8"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>